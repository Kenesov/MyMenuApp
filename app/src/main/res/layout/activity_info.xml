<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.InfoActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/container_top"
        >

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp"
            />

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Бургеры"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:id="@+id/container_img"
        android:layout_width="match_parent"
        android:layout_height="325dp"
        android:background="#eeeaf2"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/container_top"
        >
        <ImageView
            android:id="@+id/img_product"
            android:layout_width="214dp"
            android:layout_height="200dp"
            android:src="@drawable/img_4"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txt_names"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Макс Бургер"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/container_img"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="12dp"
        />
    <TextView
        android:id="@+id/txt_description"
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:text="Закручен со вкусом! Кусочки нежнейшего куриногофиле в хрустящей остерой чили оригинальнойпанировке с сочными листьями салата, кусочкамипомидора и нежным соусом мы завернули впшеничную лепешку и поджарили в тостере"
        app:layout_constraintTop_toBottomOf="@id/txt_names"
        app:layout_constraintStart_toStartOf="@id/txt_names"
        android:layout_marginTop="12dp"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_bottom"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <LinearLayout
            android:id="@+id/container_counter"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp"
            >
            <TextView
                android:id="@+id/btn_minus"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:text="-"
                android:textColor="@color/black"
                android:textSize="32dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginHorizontal="6dp"

                />
            <TextView
                android:id="@+id/btn_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:layout_marginHorizontal="6dp"

                />

            <TextView
                android:id="@+id/btn_plus"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:text="+"
                android:textColor="@color/black"
                android:textSize="32dp"
                android:textAlignment="center"
                android:layout_marginHorizontal="6dp"
                android:textStyle="bold"
                />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_to_cart"
            android:layout_width="202dp"
            android:layout_height="44dp"
            android:backgroundTint="#51267D"
            app:cardCornerRadius="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="12dp"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Добавить"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="12dp"
                    />

                <TextView
                    android:id="@+id/txt_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25 0000 сум"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="12dp"
                    />
            </FrameLayout>

        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>